#! /usr/bin/env node

var { close, remoteCall } = require('../wrapper')({
  hello: (name, cb) => {
    console.error('HELLLLOOO', name)
    cb(null, 'hello ' + name)
  },
  callback: (value, cb) => {
    console.error('CALLBACK', value, cb)
    remoteCall('async', 'callback', [value], cb)
  },
  crash: (_) => {
    console.warn('exiting ugly on purpose')
    process.nextTick(() => {
      process.exit(2)
    })
  },
  goodbye: (cb) => {
    cb(null, "done")
    process.nextTick(() => {
      close()
    })
  },
  callhost: (cb) => {
    remoteCall('sync', 'getAddress', [], (err, addr) => {
      console.log('got addr', err, addr)
      cb(err, addr)
    })
  },
},
  // our manifest is needed, because the
  // calls have a type that must match what we actually
  // understand.
  require('./manifest'))

